.sidebar-container
  .panel.panel-info
    .panel-heading
      %h3.text-center Categories
    .panel-body
      - Category.all.each do |category|
        .row.category-list{ id: "categoryid_#{category.id}" }
          .col-md-12.col-xs-12.category-title= link_to category.name, category_path(category)
