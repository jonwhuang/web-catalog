.navbar.navbar-inverse.panel-primary
  .navbar-header
    %button.navbar-toggle{type: "button", "data-toggle" => "collapse", "data-target" => ".bs-navbar-collapse" }
      %span.sr-only="Toggle navigation"
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    = link_to 'THE STORE', '/', { class: "navbar-brand" }
  .collapse.navbar-collapse.bs-navbar-collapse
    %ul.nav.navbar-nav
      %li.dropdown
        = link_to raw("Categories <span class='caret'></span>"),"#", {"class"=>"dropdown-toggle","data-toggle"=>"dropdown", "role"=>"button","aria-haspopup"=>"true", "aria-expanded"=>"false"}
        %ul.dropdown-menu
          - Category.all.each do |category|
            %li= link_to category.name, category_path(category)

    %ul.nav.navbar-nav.navbar-right
      - if current_user && current_user.admin?
        %li= link_to "Inventory Admin", admin_path
      - if current_user
        %li= link_to "Logout", '/users/sign_out', method: :delete
      %li.contact-page{ "data-toggle" => "modal", "data-target" => "#contact-overlay"}= link_to "Contact Us", '#'
